<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDECEC"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Global Stats"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="8dp"
            android:background="@drawable/red"
            >
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cases"
                android:textColor="#F44336"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Today Cases"
                android:textColor="#F44336"
                android:textSize="20sp"
                android:gravity="end" />

            <TextView
                android:id="@+id/total_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:text="000"
                android:textColor="#F44336"
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="18dp"
                 />

            <TextView
                android:id="@+id/today_case"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginRight="22dp"
                android:text="000"
                android:textColor="#F44336"
                android:textSize="18sp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="8dp"
            android:background="@drawable/green"
            >
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Recovered"
                android:textColor="#4CAF50"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/total_recv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="2dp"
                android:text="000"
                android:textColor="#4CAF50"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Today Recovered"
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:gravity="end" />

            <TextView

                android:id="@+id/today_recv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv4"
                android:layout_marginTop="2dp"
                android:layout_marginRight="22dp"
                android:gravity="end"
                android:text="000"
                android:textColor="#4CAF50"
                android:textAlignment="textEnd"
                android:textSize="18dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="8dp"
            android:background="@drawable/black"
            >
            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Deaths"
                android:textColor="#000000"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/total_dth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text5"
                android:text="000"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="18dp"
                />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Today Deaths"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="end" />

            <TextView
                android:id="@+id/today_dth"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv6"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginRight="22dp"
                android:text="000"
                android:textColor="#000000"
                android:textSize="18dp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="8dp"
            android:background="@drawable/red"
            >
            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Cases"
                android:textColor="#F44336"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/active_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text7"
                android:text="000"
                android:textColor="#F44336"
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="18dp"
                />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Critical Cases"
                android:textColor="#F44336"
                android:textSize="20sp"
                android:gravity="end" />

            <TextView
                android:id="@+id/critical_case"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv8"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginRight="22dp"
                android:text="000"
                android:textColor="#F44336"
                android:textSize="18dp"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/et"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:text="Track Countries"/>


    </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.cardview.widget.CardView>

</RelativeLayout>